    <style name="textSmall">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="textSecondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="dialogLargeBtn" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:alpha">0.8</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="dialogConfirmBtn" parent="dialogLargeBtn">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/btn_bg_large</item>
    </style>

    <style name="dialogCancelBtn" parent="dialogLargeBtn">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:background">@drawable/btn_bg_large_secondary</item>
    </style>

    <style name="dialogRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="dialogTitle" parent="@style/textTitle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogDesc" parent="@style/textSmall">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialogWarn" parent="@style/textSmall">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/in_card_item_inactive</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_full_screen" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="dialog_full_screen_light" parent="@style/dialog_full_screen">
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:statusBarColor">@android:color/background_light</item>
    </style>

    <style name="dialog_full_screen_dark" parent="@style/dialog_full_screen">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
    </style>

    <style name="top_notify_dialog_style" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <!--设置背景透明-->
        <item name="android:colorBackground">@android:color/transparent</item>
        <!--设置dialog浮与activity上面-->
        <item name="android:windowIsFloating">false</item>
        <!--去掉背景模糊效果-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">@dimen/dp_5</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">@dimen/dp_5</item>
    </style>
</resources>